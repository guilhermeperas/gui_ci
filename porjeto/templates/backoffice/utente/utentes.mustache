<div class="list">
    <h1>{{h1_text}}</h1>
    <table>
        <thead>
        <tr>
            <th>id</th>
            <th>Nome</th>
            <th>Numero Utente</th>
            <th>Morada</th>
            {{#hasPerms}}
                <th>Edicao</th>
            {{/hasPerms}}
        </tr>
        </thead>
        <tbody>
            {{#list}}
            <tr>
                <td>{{id}}</td>
                <td>{{nome}}</td>
                <td>{{nUtente}}</td>
                <td>{{morada}}</td>
                {{#hasPerms}}
                <td>
                    <a href="{{base_url}}utentes/edit/{{id}}">Editar</a>
                    <a href="{{base_url}}utentes/delete/{{id}}">Apagar</a>
                </td>
                {{/hasPerms}}

            </tr>
            {{/list}}
        </tbody>
    </table>
    {{#hasPerms}}
        <a href="{{create_utente}}">Criar Utente</a>
    {{/hasPerms}}

</div>