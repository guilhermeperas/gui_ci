<div class="content">
    {{#produtos}}
    <table>
        <thead>
        <tr>
            <th>Nome</th>
            <th>Valor</th>
            <th>Remover</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{nome}}</td>
                <td>{{value}} $</td>
                <td><a href={{remover}}{{receita_id}}/{{id}}>Remover</a></td>
            </tr>
        </tbody>
    </table>
    {{/produtos}}
    <form action={{form_action}} method="POST">
        <label for="produto">Adicionar Produto:</label>
        <select name-"produto" >
            {{#allProducts}}
                <option value={{id}}>{{nome}}</option>
            {{/allProducts}}
        </select>
        <input type="submit" value="Submit">
    </form>
</div>