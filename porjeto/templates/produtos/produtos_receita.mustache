<div class="content">
    <table>
        <thead>
        <tr>
            <th>Nome</th>
            <th>Valor</th>
            <th>Image</th>
            {{#hasPerms}}
                <th>Remover</th>
            {{/hasPerms}}
            
        </tr>
        </thead>
        <tbody>
        {{#produtos}}
            <tr>
                <td>{{nome}}</td>
                <td>{{value}} $</td>
                <td><img class="img" src="{{caminho}}{{img_path}}" alt="produto image"/></td>
                {{#hasPerms}}
                <td><a href={{remover}}{{receita_id}}/{{id}}>Remover</a></td>
                {{/hasPerms}}
            </tr>
        {{/produtos}}
        </tbody>
    </table>
    {{#hasPerms}}
        <a href="{{addProduto}}">Adicionar Produto</a>
    {{/hasPerms}}
        
</div>